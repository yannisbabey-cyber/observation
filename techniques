<script>
  const input = document.getElementById('q');
  const clearBtn = document.getElementById('clear');
  const countEl = document.getElementById('count');
  const cards = Array.from(document.querySelectorAll('.exercise'));

  // Store original HTML for highlight reset
  const searchableBlocks = Array.from(document.querySelectorAll('.searchable'));
  const originalHTML = new Map(searchableBlocks.map(el => [el, el.innerHTML]));

  function escapeRegExp(str){
    return str.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
  }

  function removeHighlights(){
    for (const el of searchableBlocks){
      el.innerHTML = originalHTML.get(el);
    }
  }

  function highlight(term){
    if(!term) return 0;
    const re = new RegExp(`(${escapeRegExp(term)})`, 'gi');
    let total = 0;

    for (const el of searchableBlocks){
      // Work on current HTML (already reset before calling highlight)
      const walker = document.createTreeWalker(el, NodeFilter.SHOW_TEXT, {
        acceptNode(node){
          if(!node.nodeValue || !node.nodeValue.trim()) return NodeFilter.FILTER_REJECT;
          // Avoid highlighting inside script/style (none here, but safe)
          const parentTag = node.parentElement?.tagName?.toLowerCase();
          if(parentTag === 'script' || parentTag === 'style') return NodeFilter.FILTER_REJECT;
          return NodeFilter.FILTER_ACCEPT;
        }
      });

      const textNodes = [];
      while(walker.nextNode()) textNodes.push(walker.currentNode);

      for(const node of textNodes){
        const text = node.nodeValue;
        if(!re.test(text)) continue;
        re.lastIndex = 0;

        const frag = document.createDocumentFragment();
        let last = 0;
        let match;
        while((match = re.exec(text)) !== null){
          const start = match.index;
          const end = start + match[0].length;

          frag.appendChild(document.createTextNode(text.slice(last, start)));
          const m = document.createElement('mark');
          m.textContent = text.slice(start, end);
          frag.appendChild(m);
          total++;
          last = end;
        }
        frag.appendChild(document.createTextNode(text.slice(last)));
        node.parentNode.replaceChild(frag, node);
      }
    }
    return total;
  }

  function filter(){
    const term = input.value.trim().toLowerCase();

    // Reset highlights to keep DOM consistent
    removeHighlights();

    let matches = 0;

    for(const card of cards){
      const title = (card.getAttribute('data-title') || '').toLowerCase();
      const text = card.innerText.toLowerCase();
      const ok = !term || title.includes(term) || text.includes(term);
      card.classList.toggle('hidden', !ok);
    }

    if(term){
      matches = highlight(term);
    }

    const visible = cards.filter(c => !c.classList.contains('hidden')).length;
    const label = term
      ? `${matches} occurrence${matches>1?'s':''} ‚Ä¢ ${visible} exercice${visible>1?'s':''}`
      : `0 r√©sultat`;
    countEl.textContent = label;
  }

  input.addEventListener('input', filter);
  clearBtn.addEventListener('click', () => {
    input.value = '';
    removeHighlights();
    cards.forEach(c => c.classList.remove('hidden'));
    countEl.textContent = '0 r√©sultat';
    input.focus();
  });

  // Keyboard shortcut: Ctrl/Cmd + K to focus search
  window.addEventListener('keydown', (e) => {
    const isMac = navigator.platform.toUpperCase().includes('MAC');
    if((isMac ? e.metaKey : e.ctrlKey) && e.key.toLowerCase() === 'k'){
      e.preventDefault();
      input.focus();
    }
  });
</script>
</body>
</html>
